{
    "shellformat.useEditorConfig": true,
    "shellformat.flag": "",
    "shellformat.path": "",
    "chat.tools.terminal.blockDetectedFileWrites": "never",
    "containers.commands.attach": "${containerCommand} exec -it ${containerId} ${shellCommand}",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.localEchoEnabled": "auto",
    "terminal.integrated.developer.devMode": true,
      "workbench.settings.applyToAllProfiles": ,
      "vscodeGrok.apiKey"
      "vscodeGrok.model"
      "vscodeGrok.outputMethod"
      "vscodeGrok.showPreview"
      "vscodeGrok.systemPrompt"

      // === SAVE RITUAL ===
      "files.autoSave": "off",
      "files.eol": "\n",
      "files.saveConflictResolution": "askUser",
    
      // === TAB FORTRESS ===
      "workbench.editor.limit.enabled": true,
      "workbench.editor.limit.value": 2,
      "workbench.editor.limit.perEditorGroup": true,
      "workbench.editor.enablePreview": true,
      "workbench.editor.enablePreviewFromQuickOpen": true,
      "workbench.editor.enablePreviewFromCodeNavigation": true,
      "workbench.editor.showTabs": "multiple",
      "workbench.editor.closeOnFileDelete": true,
      "workbench.editor.splitInGroupLayout": "horizontal",
    
      // === FORMATTING ===
      "eslint.validate": ["javascript", "javascriptreact"],
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true,
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.stylelint": "explicit"
      },
      "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
      "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
      "prettier.tabWidth": 2,
      "prettier.useTabs": false,
      "prettier.endOfLine": "auto",
    
      // === TAILWIND ===
      "tailwindCSS.emmetCompletions": true,
      "tailwindCSS.experimental.configFile": null,
      "tailwindCSS.experimental.classRegex": [
        "cn\\(([^)]*)\\)",
        "cva\\(([^)]*)\\)"
      ],
      "css.lint.unknownAtRules": "ignore",
      "scss.lint.unknownAtRules": "ignore",
      "less.lint.unknownAtRules": "ignore",
    
      // === GIT ===
      "git.confirmSync": false,
      "git.autofetch": true,
      "git.enableSmartCommit": true,
    
      // === TERMINAL ===
      "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
      "terminal.integrated.fontSize": 14,
      "terminal.integrated.cursorBlinking": true,
      "terminal.integrated.gpuAcceleration": "on",
      "terminal.integrated.shellIntegration.enabled": true,
      "terminal.integrated.tabs.enabled": true,
    
      // === UI/UX ===
      "editor.minimap.enabled": false,
      "explorer.fileNesting.enabled": true,
      "workbench.settings.editor": "json",
      "workbench.settings.useSplitJSON": true,
      "workbench.editor.autoLockGroups": {
        "workbench.editor.chatSession": false,
        "workbench.editor.processExplorer": false,
        "terminalEditor": false,
        "mainThreadWebview-simpleBrowser.view": false,
        "mainThreadWebview-browserPreview": false
      },
      "prettier.enableDebugLogs": true,
      "workbench.editor.limit.excludeDirty": true,
      "terminal.integrated.enableImages": true,
      "terminal.integrated.suggest.enabled": true
    }
    